version: 1
disable_existing_loggers: false

formatters:
  default:
    format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
  access:
    format: '%(asctime)s - %(client_addr)s - "%(request_line)s" %(status_code)s'

handlers:
  console:
    class: logging.StreamHandler
    level: {{ log_level }}
    formatter: default
    stream: ext://sys.stdout
  
  file:
    class: logging.handlers.RotatingFileHandler
    level: {{ log_level }}
    formatter: default
    filename: {{ orchestrator_log_dir }}/api/orchestrator.log
    maxBytes: 52428800  # 50MB
    backupCount: 10
  
  access_file:
    class: logging.handlers.RotatingFileHandler
    level: INFO
    formatter: access
    filename: {{ orchestrator_log_dir }}/api/access.log
    maxBytes: 52428800  # 50MB
    backupCount: 10

loggers:
  uvicorn:
    level: {{ log_level }}
    handlers: [console, file]
    propagate: false
  
  uvicorn.access:
    level: INFO
    handlers: [access_file]
    propagate: false
  
  fastapi:
    level: {{ log_level }}
    handlers: [console, file]
    propagate: false
  
  shield-orchestrator:
    level: {{ log_level }}
    handlers: [console, file]
    propagate: false

root:
  level: {{ log_level }}
  handlers: [console, file]
