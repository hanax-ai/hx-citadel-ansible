# EditorConfig for HX-Citadel Ansible Project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{py,sh}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.j2]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
