[Unit]
Description=HX Citadel Orchestrator
After=network.target

[Service]
WorkingDirectory={{ app_dir }}/orchestrator
EnvironmentFile={{ app_dir }}/orchestrator/.env
ExecStart={{ app_dir }}/venv/bin/poetry run uvicorn main:app --host 0.0.0.0 --port {{ fastapi_port | default(8000) }}
Restart=always
User=agent0

[Install]
WantedBy=multi-user.target
